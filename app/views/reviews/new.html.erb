
<div class="container">
  <%= link_to("Back", :back, class: "btn btn-secondary") %>


  <h2 class="display-5 mb-5">New review:</h2>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>
